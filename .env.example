# BookLore API Configuration
BOOKLORE_API_URL=https://api.booklore.app

# Note: BookLore credentials are entered via the web UI login page, not here

# AI Provider Configuration (choose one or more)
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key

# OpenAI ChatGPT
OPENAI_API_KEY=your_openai_key

# Google Gemini
GOOGLE_API_KEY=your_google_key

# Default AI Provider (anthropic | openai | google)
DEFAULT_AI_PROVIDER=google

# AI Model Configuration (optional, uses defaults if not set)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# OPENAI_MODEL=gpt-4o
# GOOGLE_MODEL=gemini-2.5-flash

# AI Temperature (0.0-1.0, default 0.7)
AI_TEMPERATURE=0.7

# Maximum recommendations to return
MAX_RECOMMENDATIONS=5

# Debug mode (set to true to see detailed API logs)
DEBUG=false

# Web Server Configuration
PORT=3000
SESSION_SECRET=change-this-to-a-random-string-in-production
